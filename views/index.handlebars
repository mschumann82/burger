<h1>Eat Dat Burger!</h1>

<h2>Burgers that are ready to eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
     <li>
	    {{burger_name}}
      <button class="change-devour" data-id="{{id}}" data-newDevour="{{devour}}">
		  {{#if devour}}You Ate Dat!{{else}}Eat Dis!{{/if}}
	    </button>
	  </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
	    {{burger_name}}
      <button class="change-devour" data-id="{{id}}" data-newDevour="{{devour}}">
		  {{#if devour}}You Ate Dat!{{else}}Eat Dis!{{/if}}
	    </button>
	    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger to eat.</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  

  <button type="submit">Add Burger</button>
</form>
